{
    "name": "screenforge-server",
    "version": "1.0.0",
    "description": "ScreenForge backend API server",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon src/index.ts",
        "build": "prisma generate && tsc",
        "start": "node dist/index.js",
        "vercel-build": "prisma generate && prisma migrate deploy && tsc",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:migrate:prod": "prisma migrate deploy",
        "prisma:seed": "tsx prisma/seed.ts",
        "prisma:studio": "prisma studio",
        "migrate:cloudinary": "tsx src/utils/migrateToCloudinary.ts",
        "test": "echo \"Error: no test specified\" && exit 1",
        "postinstall": "prisma generate",
        "vercel-postbuild": "prisma generate"
    },
    "keywords": [
        "screen-recording",
        "video-editing",
        "express",
        "typescript"
    ],
    "author": "ScreenForge Team",
    "license": "MIT",
    "dependencies": {
        "@clerk/clerk-sdk-node": "^5.0.42",
        "@prisma/client": "^5.8.1",
        "cloudinary": "^2.7.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "ffmpeg-static": "^5.2.0",
        "fluent-ffmpeg": "^2.1.2",
        "helmet": "^7.1.0",
        "multer": "^1.4.5-lts.1",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/fluent-ffmpeg": "^2.1.24",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.6",
        "@types/uuid": "^9.0.7",
        "nodemon": "^3.0.2",
        "prisma": "^5.8.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.3",
        "typescript": "^5.3.3"
    }
}
